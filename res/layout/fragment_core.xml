

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.blogspot.drivetwist.www.kbid.CoreFragment"
        android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/taxi"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Transportaion and Car booking"
            android:textColor="#22EAFA"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/textView2"
            app:srcCompat="@drawable/poster" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/imageView3"
            android:text="Upgrades"
            android:textColor="#22EAFA"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="31dp"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignTop="@+id/imageView4"
            android:text="LiveStream"
            android:textColor="#22EAFA"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/textView4"
            app:srcCompat="@drawable/food" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignTop="@+id/imageView5"
            android:text="Order Food and Drink"
            android:textColor="#22EAFA"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/bckbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_below="@+id/textView4"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="21dp"
            android:onClick="scre"
            android:text="LiveScore"
            android:textColor="#3247B2"
            android:textStyle="bold"
            android:textSize="13sp"/>
