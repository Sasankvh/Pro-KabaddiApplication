<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03FFF7"
    tools:context="com.blogspot.drivetwist.www.kbid.Schedule">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimaryDark"
        android:calendarTextColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/DatePickerButton" />

    <Button
        android:id="@+id/DatePickerButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="EVENT"
        android:textSize="20dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/BookTickets"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/DatePickerButton"
        android:layout_alignBottom="@+id/DatePickerButton"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/DatePickerButton"
        android:layout_toRightOf="@+id/DatePickerButton"
        android:autoText="true"
        android:text="BookTicket"
        android:textSize="20dp" />

</RelativeLayout>
